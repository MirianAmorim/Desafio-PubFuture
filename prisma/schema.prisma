generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Conta {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now()) @map("created_at")
  instFinanc String
  tipo       String
  despesa    Despesa  @relation(fields: [despesaid], references: [id])
  receita    Receita  @relation(fields: [receitaid], references: [id])
}

model Receita {
  id         Int      @id @default(autoincrement())
  valor      Int
  dataRec    DateTime
  dataRecEsp DateTime
  descricao  String
  tipo       String
  conta      Conta[]
}

model Despesa {
  id         Int      @id @default(autoincrement())
  valor      Int
  dataPag    DateTime
  dataPagEsp DateTime
  tipo       String
  conta      Conta[]
}
